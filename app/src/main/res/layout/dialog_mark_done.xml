<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#368981"
    android:layout_marginTop="200dp">

    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@android:color/white" />

    <!-- Top section: Photo + Attach text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:background="#83C5BE">

        <ImageView
            android:id="@+id/imgAttachedPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvAttachText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ATTACH PICTURE"
            android:textColor="#006D77"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </FrameLayout>

    <!-- Caption field -->
    <EditText
        android:id="@+id/etCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/stylish"
        android:gravity="center"
        android:hint="type something here..."
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="100dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"

        android:textColorHint="#CC9E68"
        android:textSize="16sp" />

    <!-- Bottom bar with City and Done button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/stylish"
            android:text="DUBAI\nUAE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFinalDone"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:text="Done"
            android:textColor="#FFF5F5"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_teal"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>