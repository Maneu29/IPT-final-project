<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#1D3233"
tools:context=".HistoryFragment">


<TextView
    android:id="@+id/User"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/suez_one"
    android:text="User"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@+id/profileImage"
    app:layout_constraintStart_toStartOf="@+id/textView3"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/stylish"
    android:text="Welcome"
    android:textColor="#FFFFFF"
    android:textSize="15sp"
    app:layout_constraintBottom_toTopOf="@+id/User"
    app:layout_constraintStart_toEndOf="@+id/profileImage"
    app:layout_constraintTop_toTopOf="@+id/profileImage"
    app:layout_constraintVertical_chainStyle="packed" />

<ImageView
    android:id="@+id/profileImage"
    android:layout_width="62dp"
    android:layout_height="60dp"
    android:layout_marginStart="27dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/box_border"
    android:src="@drawable/baseline_person_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/TravelTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:fontFamily="@font/limelight"
    android:text="Travel Bucket List"
    android:textColor="#CC9E68"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="@+id/profileImage"
    app:layout_constraintTop_toBottomOf="@+id/profileImage" />

<View
    android:id="@+id/userUnderline"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="30dp"
    android:background="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/TravelTitle" />




</androidx.constraintlayout.widget.ConstraintLayout>